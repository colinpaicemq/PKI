//IBMRACF  JOB 1,MSGCLASS=H,RESTART=DEL
//  EXPORT SYMLIST=*
//  SET WEBSRV='WEBSRV'
//* THE USERID
//  SET PKISRVD='PKISRVD'
//* THE STARTED TASK NAME
//  SET PKISERV='PKISERV'
//  SET PKISERVD='PKISERVD'
//DEL EXEC PGM=IKJEFT01,REGION=0M
//SYSPRINT DD SYSOUT=*
//SYSTSPRT DD SYSOUT=*
//SYSTSIN DD *,SYMBOLS=JCLONLY
LISTDSD DA('&PKISRVD..**') ALL
DELDSD '&PKISRVD..**'

LU &PKISRVD.
DELUSER  &PKISRVD.

LU &PKISERV
DELUSER  &PKISERV

LG     PKIGRP
DELGROUP  PKIGRP

RLIST   STARTED &PKISERVD..*
RDELETE STARTED &PKISERVD..*

SETROPTS RACLIST(FACILITY) REFRESH
SETROPTS CLASSACT(SURROGAT)
SETROPTS RACLIST(CSFSERV) REFRESH

SETROPTS GENERIC(DATASET) REFRESH

SETROPTS RACLIST(FACILITY) REFRESH
//DEF EXEC PGM=IKJEFT01,REGION=0M
//SYSPRINT DD SYSOUT=*
//SYSTSPRT DD SYSOUT=*
//SYSTSIN DD *,SYMBOLS=JCLONLY
ADDUSER  &PKISRVD. NAME('COLINS')  NOPASSWORD -
   OMVS(AUTOUID  ASSIZE(256000000)  THREADS(512))

ADDUSER &PKISERV NOPASSWORD   OMVS( AUTOUID) -
    NAME('PKI SRVS SURROGATE')

ADDGROUP PKIGRP  OMVS( AUTOGID )

CONNECT IBMUSER GROUP(PKIGRP )

ADDSD '&PKISRVD..**' UACC(NONE)
PERMIT '&PKISRVD..**' ID(&PKISRVD.) ACCESS(ALTER)

PERMIT '&PKISRVD..**' ID(PKIGRP ) ACCESS(CONTROL)
PERMIT '&PKISRVD..**' ID(PKIGRP ) ACCESS(ALTER )
PERMIT BPX.SERVER CLASS(FACILITY) ID(&PKISRVD.) ACCESS(READ)

PERMIT IRR.DIGTCERT.GENCERT CLASS(FACILITY)-
   ID(&PKISRVD.) ACCESS(CONTROL)

PERMIT IRR.DIGTCERT.LISTRING CLASS(FACILITY)-
   ID(&PKISRVD.) ACCESS(UPDATE)

PERMIT BPX.SRV.&PKISERV CLASS(SURROGAT)  ID(&WEBSRV.) ACCESS(READ)

SETROPTS RACLIST(SURROGAT) REFRESH

PERMIT IRR.DIGTCERT.CERTIFAUTH.* CLASS(CSFKEYS)-
  ID(&PKISRVD.) ACCESS(READ)

PERMIT CSFOWH CLASS(CSFSERV)  ID(&PKISRVD.) ACCESS(READ)

RDEFINE STARTED &PKISERVD..* STDATA(USER(&PKISRVD.))

PERMIT IRR.RPKISERV.** CLASS(FACILITY)  -
  ID(PKISERV) ACCESS(CONTROL)

RDEFINE FACILITY IRR.RPKISERV.PKIADMIN

PERMIT IRR.RPKISERV.PKIADMIN CLASS(FACILITY)-
  ID(PKIGRP ) ACCESS(UPDATE)

PERMIT IRR.RPKISERV.PKIADMIN CLASS(FACILITY) -
    ID(PKISERV) ACCESS(NONE)

SETROPTS RACLIST(FACILITY) REFRESH
SETROPTS RACLIST(STARTED ) REFRESH

SETROPTS CLASSACT(SURROGAT)

SETROPTS RACLIST(CSFSERV) REFRESH

SETROPTS GENERIC(DATASET) REFRESH

SETROPTS RACLIST(FACILITY) REFRESH
